menu "MDM Configuration"

    config MDM_LOG_TOPIC
        string "MQTT topic for log messages"
        default "iotsupport/logsink"

    config MDM_LOG_TASK_STACK_SIZE
        int "Stack size for log manager task"
        default 4096

    config MDM_LOG_TASK_CORE_ID
        int "Core ID for log manager task"
        default 0

endmenu
